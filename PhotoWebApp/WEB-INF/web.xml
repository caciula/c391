<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
 http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
 version="2.4">

    <!-- Default welcome screen -->
    <welcome-file-list>
        <welcome-file>Home</welcome-file>
    </welcome-file-list>

    <!-- Backing servlets for jsp/html pages and actions -->
    <servlet>
        <servlet-name>UploadImage</servlet-name>
        <servlet-class>main.web.UploadImage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UploadImage</servlet-name>
        <url-pattern>/UploadImage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewImage</servlet-name>
        <servlet-class>main.web.ViewImage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewImage</servlet-name>
        <url-pattern>/ViewImage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewProfile</servlet-name>
        <servlet-class>main.web.ViewProfile</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewProfile</servlet-name>
        <url-pattern>/ViewProfile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditImage</servlet-name>
        <servlet-class>main.web.EditImage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditImage</servlet-name>
        <url-pattern>/EditImage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>main.web.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>main.web.Register</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GroupManagement</servlet-name>
        <servlet-class>main.web.GroupManagement</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GroupManagement</servlet-name>
        <url-pattern>/GroupManagement</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserManagement</servlet-name>
        <servlet-class>main.web.UserManagement</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserManagement</servlet-name>
        <url-pattern>/UserManagement</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Search</servlet-name>
        <servlet-class>main.web.Search</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Search</servlet-name>
        <url-pattern>/Search</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>DataAnalysis</servlet-name>
        <servlet-class>main.web.DataAnalysis</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DataAnalysis</servlet-name>
        <url-pattern>/DataAnalysis</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UploadImagesFromDir</servlet-name>
        <servlet-class>main.web.UploadImagesFromDir</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UploadImagesFromDir</servlet-name>
        <url-pattern>/UploadImagesFromDir</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>main.web.Home</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/Home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RemoveImage</servlet-name>
        <servlet-class>main.web.RemoveImage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RemoveImage</servlet-name>
        <url-pattern>/RemoveImage</url-pattern>
    </servlet-mapping>

    <!-- Servlets to obtain specific page resources -->
    <servlet>
        <servlet-name>GetFullImage</servlet-name>
        <servlet-class>main.resource.GetFullImage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetFullImage</servlet-name>
        <url-pattern>/GetFullImage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetThumbnailImage</servlet-name>
        <servlet-class>main.resource.GetThumbnailImage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetThumbnailImage</servlet-name>
        <url-pattern>/GetThumbnailImage</url-pattern>
    </servlet-mapping>
    

</web-app>
